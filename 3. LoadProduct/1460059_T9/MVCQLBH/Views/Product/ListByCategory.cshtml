@using MVCQLBH.Models
@model IList<Product>

@section style{
    <style type="text/css">
        .thumbnail {
            min-height: 500px;
        }
    </style>
}

@section ContentHeader{
    Danh sách sản phẩm
}

@if (Model.Count == 0)
{
    <p>Không có sản phẩm</p>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/imgs/sp/@p.ProID/main_thumbs.jpg" title="@p.ProName" />
                    <div class="caption">
                        <h3>@p.ProName</h3>
                        @*<h4>Giá: @string.Format("{0:C}", p.Price)</h4>*@
                        <h4>Giá: @string.Format("{0:0,0 đ}", p.Price)</h4>
                        <h4>
                            Tình trạng:
                            @if (p.Quantity > 0)
                            {
                                @:Còn hàng
                            }
                            else
                            {
                                @:Hết hàng
                            }
                        </h4>
                        <h4>@p.TinyDes</h4>
                        <p>
                            <a href="#" class="btn btn-default" role="button">Chi tiết</a>
                            <a href="#" class="btn btn-danger" role="button">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                Mua
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
